<Application x:Class="HermesApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HermesApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--Акцентирование внимания-->
        <!--#FFE0DD46-->


        <!--Дополнительный цвет-->
        <!--#FFBACBD2-->


        <!--Основной цвет-->
        <!--#FFFFF9F1-->
        <Style TargetType="Grid">
            <Setter Property="Background" Value="#FFFFF9F1"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#FFE0DD46"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#FFE0DD46"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>

        <Style TargetType="StackPanel">
            <Setter Property="Background" Value="#FFFFF9F1"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#FFE0DD46"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="Image">
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="5"/>
        </Style>
        
        <!---->
        <!---->
        <!---->
        <!--Стили по ключу-->
        <!---->

            <!--Стили для авторизации-->
        <Style x:Key="AuthPage_CheckBox_TextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <Style x:Key="AuthPage_NavigationButton_TextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>

        <Style x:Key="AuthPage_ButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#FFE0DD46"/>
            <Setter Property="FontFamily" Value="Arial"/>
        </Style>
        
            <!--Стили заглавия страницы-->
        <Style x:Key="PageTitle_PanelStyle" TargetType="StackPanel">
            <Setter Property="Background" Value="#FFBACBD2"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="PageTitle_BlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#FFBACBD2"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="40"/>
        </Style>

    </Application.Resources>
</Application>
